3.-		public int[] myMethod(){
			int[] myAray= new int[20];
			for(int i=0; i<20; i++){
				if(i%2==0){
				myArray[i]=2;
				continue;
				}
				myArray[i]=i;
			}
			return myArray;
		}
		
